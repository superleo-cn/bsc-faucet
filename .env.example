# Multi-Chain Faucet Configuration

# Server Configuration
PORT=8080
RATE_LIMIT_IP=30
ENABLE_METRICS=true

# BSC Chain Configuration
BSC_PRIVATE_KEY=0xYOUR_BSC_PRIVATE_KEY
BSC_RPC_URL=https://bsc-testnet.bnbchain.org
# 若发放 BEP20 代币, 填合约地址; 留空表示原生 BNB
BSC_TOKEN_CONTRACT=0xddf4b7938b4379301690fc2c7dc898b9084a4826
# 人类可读数量 (会依据 TOKEN_DECIMALS 转成 claimAmount 原始单位)
BSC_CLAIM_AMOUNT_TOKENS=100
BSC_TOKEN_DECIMALS=18
BSC_COOLDOWN_HOURS=24
BSC_CHAIN_ID=97        # 97 for BSC Testnet, 56 for BSC Mainnet

# SOCCHAIN Configuration
SOCCHAIN_PRIVATE_KEY=0xYOUR_SOCCHAIN_PRIVATE_KEY
SOCCHAIN_RPC_URL=http://localhost:8545    # Replace with your SOCCHAIN RPC URL
# 若发放 SOCCHAIN 代币, 填合约地址; 留空表示原生 SOC
SOCCHAIN_TOKEN_CONTRACT=
SOCCHAIN_CLAIM_AMOUNT_TOKENS=100
SOCCHAIN_TOKEN_DECIMALS=18
SOCCHAIN_COOLDOWN_HOURS=24
SOCCHAIN_CHAIN_ID=1001     # Replace with your SOCCHAIN chain ID

# Legacy Environment Variables (for backward compatibility)
# These are now mapped to BSC configuration
PRIVATE_KEY=${BSC_PRIVATE_KEY}
RPC_URL=${BSC_RPC_URL}
TOKEN_CONTRACT=${BSC_TOKEN_CONTRACT}
CLAIM_AMOUNT_TOKENS=${BSC_CLAIM_AMOUNT_TOKENS}
TOKEN_DECIMALS=${BSC_TOKEN_DECIMALS}
COOLDOWN_HOURS=${BSC_COOLDOWN_HOURS}
CHAIN_ID=${BSC_CHAIN_ID}
